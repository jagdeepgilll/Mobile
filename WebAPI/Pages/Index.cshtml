@page
@model IndexModel
@{
    ViewData["Title"] = "Mobiles CRUD API";
}
<p></p>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1>Mobiles Records</h1>
        </div>

        <div class="col-sm-4">
            <a href="#AddMobileModal" class="btn btn-success" data-toggle="modal">
                <i class="material-icons">&#xE147;</i> <span>New Mobile</span>
            </a>
        </div>
    </div>
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>IMEI #</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Year</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="allMobiles"></tbody>
        </table>
    </div>
</div>
=<div id="AddMobileModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                <div class="modal-header">
                    <h3 class="modal-title">Add Mobile</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <input class="form-control" type="text" id="add-reg" placeholder="Enter IMEI #" />
                    <br />
                    <input class="form-control" type="text" id="add-make" placeholder="Enter Make (Company)" />
                    <br />
                    <input class="form-control" type="text" id="add-model" placeholder="Enter Mobile Model" />
                    <br />
                    <input class="form-control" type="text" id="add-colour" placeholder="Enter Color of Mobile" />
                    <br />
                    <input class="form-control" type="number" id="add-year" placeholder="Enter Year of release" />
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" value="Add">
                    <div class="form-group" id="result">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!---Edit Modal html -->
<div id="editMobileModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="my-form">
                <div class="modal-header">
                    <h3 class="modal-title">Edit Mobile</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="edit-id">
                    <input class="form-control" type="text" id="edit-reg" />
                    <br />
                    <input class="form-control" type="text" id="edit-make" />
                    <br />
                    <input class="form-control" type="text" id="edit-model" />
                    <br />
                    <input class="form-control" type="text" id="edit-colour" />
                    <br />
                    <input class="form-control" type="number" id="edit-year" />
                </div>
                <div class="form-group" id="resultUpdate"></div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-info" value="Save">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>

        //run the LoadTable function when the page has loaded
        $(document).ready(function () {
            LoadTable();
        });
    </script>
}